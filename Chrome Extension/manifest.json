{
  "name": "Reddit Random",
  "description": "Queues multiple subreddits all at once and sets to the top of all time.",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "tabs"
       
  ],
  "background": {
    "scripts": ["popup.js"]
  },
  "browser_action": {
    "default_title": "SHOW ME WHAT YOU GOT!",
    "default_icon": "icon.png"

  },
  "icons": { "16": "icon.png",
           "48": "icon.png",
          "128": "icon.png" },
  "manifest_version": 2
}
